        "libs/backend/user-service/data-access/src/index.ts"
      ],
      "@schoolinc/backend/user-service/feature": [
        "libs/backend/user-service/feature/src/index.ts"
      ],
      "@schoolinc/shared/api-interfaces": [
        "libs/shared/api-interfaces/src/index.ts"
      ],
      "@schoolinc/shared/message-broker": [
        "libs/shared/message-broker/src/index.ts"
