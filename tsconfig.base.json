        "libs/api-gateway/feature/src/index.ts"
      ],
      "@schoolinc/api-gateway/utils": ["libs/api-gateway/utils/src/index.ts"],
      "@schoolinc/backend/auth-service/core": [
        "libs/backend/auth-service/core/src/index.ts"
      ],
      "@schoolinc/backend/auth-service/data-access": [
        "libs/backend/auth-service/data-access/src/index.ts"
      ],
      "@schoolinc/backend/auth-service/feature": [
        "libs/backend/auth-service/feature/src/index.ts"
      ],
      "@schoolinc/backend/school-service/core": [
        "libs/backend/school-service/core/src/index.ts"
      ],
      "@schoolinc/backend/school-service/data-access": [
        "libs/backend/school-service/data-access/src/index.ts"
      ],
